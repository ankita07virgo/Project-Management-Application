<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_fragmentAssociate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AssociateFragment">

    <include
        android:id="@+id/mainheader_layout" layout="@layout/main_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/header_bottomguide"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/header_bottomguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/associate_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainheader_layout"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_bottomguide"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/recyclerview_bottomguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90"/>
</androidx.constraintlayout.widget.ConstraintLayout>