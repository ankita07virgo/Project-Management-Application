<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/india_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
       android:background="@color/white">

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">
    <ImageView
        android:id="@+id/img_india"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="@drawable/ic_launcher_background"
         />
    <TextView
        android:id="@+id/tv_empId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:fontFamily="sans-serif"
        android:hint="employee id"
        android:layout_marginStart="5dp"
        android:textColor="@color/appcolor"
        android:textSize="@dimen/_11sdp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView
            android:id="@+id/tv_associate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:hint="employee name"
            android:textColor="@color/appcolor"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/tv_associate_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:hint="employee designation"
            android:textColor="@color/appcolor"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/tv_associate_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:hint="employee department"
            android:textColor="@color/appcolor"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:id="@+id/tv_associate_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:textColor="@color/appcolor"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>
    </LinearLayout>